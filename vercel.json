{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/build" }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/subjects", "dest": "/server/server.js" },
    { "src": "/subtopics/(.*)", "dest": "/server/server.js" },
    { "src": "/explain", "dest": "/server/server.js" },
    { "src": "/question", "dest": "/server/server.js" },
    { "src": "/static/(.*)", "dest": "/client/build/static/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/build/index.html" }
  ]
}